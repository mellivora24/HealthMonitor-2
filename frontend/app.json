{
  "expo": {
    "name": "Health Monitor",
    "slug": "health-monitoring-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#007AFF"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.healthmonitor.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#007AFF"
      },
      "package": "com.healthmonitor.app"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "scheme": "healthmonitor",
    "plugins": ["expo-router"]
  }
}
